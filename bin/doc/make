#/bin/sh

mkdir -p src/md/figures


files=$(ls src/dotty/*.dot)
mkdir -p src/md/figures/dotty

for file in $files
do
output=$(echo $file | cut -d'.' -f 1)
output1=$(echo $output | cut -d'/' -f 3)
output_file="src/md/figures/dotty/${output1}.png"
dot -Tpng $file -o $output_file 
done

#
# make pu diagramm
#
cd src/pu
ant 
mv output ../md/figures/plantuml
cd ../..



#
# make markdown pdf
# 
cd src/md
make pdf
cp output/thesis.pdf ../../bachelorArbeit.pdf
cd ../..
